{
  "name": "product-file-builder",
  "version": "1.0.0",
  "description": "Product file builder",
  "scripts": {
    "webpack-dev": "cross-env NODE_ENV=development webpack --mode development",
    "webpack-prod": "cross-env NODE_ENV=production webpack --mode production --optimize-max-chunks 1",
    "build:dev": "webpack-dev-server --inline --hot --progress --port 8080",
    "build:dev2": "webpack-dev-server --inline --hot --progress --port 8080 && node ./file-processor-server/app.js",
    "build:prod": "npm run build:clean && ngc && npm run webpack-prod && npm run build:clean",
    "build:clean": "del-cli 'src/**/*.js' 'src/**/*.js.map' 'src/**/*.ngsummary.json' 'src/**/*.metadata.json' 'src/**/**/*.ngfactory.ts' 'src/**/*.ngstyle.ts' 'src/**/*.shim.ts'",
    "serve": "lite-server"
  },
  "repository": {
    "type": "git",
    "url": "git remote add origin https://github.com/lukecaptaincode/product-builder.git"
  },
  "author": "Luke Captain <lukecaptain@hotmail.com>",
  "license": "MIT",
  "homepage": "lukecaptain.com",
  "dependencies": {
    "@angular/animations": "~7.2",
    "@angular/common": "~7.2",
    "@angular/compiler": "~7.2",
    "@angular/compiler-cli": "~7.2",
    "@angular/core": "~7.2",
    "@angular/forms": "~7.2",
    "@angular/http": "~7.2",
    "@angular/platform-browser": "~7.2",
    "@angular/platform-browser-dynamic": "~7.2",
    "@angular/platform-server": "~7.2",
    "@angular/router": "~7.2",
    "@angular/upgrade": "~7.2",
    "@octokit/rest": "^16.26.0",
    "bluebird": "^3.5.5",
    "core-js": "~2.6",
    "materialize-css": "^1.0.0-rc.2",
    "mkdirp": "^0.5.1",
    "rxjs": "~6.4",
    "sequelize": "^5.8.6",
    "sqlite3": "^4.0.8",
    "write-file": "^1.0.0",
    "xfs": "^0.2.6",
    "xml-writer": "^1.7.0",
    "xmlbuilder": "^13.0.2",
    "zone.js": "~0.8"
  },
  "devDependencies": {
    "@ngtools/webpack": "~7.3",
    "@types/core-js": "~2.5",
    "@types/node": "~10.12",
    "angular-router-loader": "~0.8",
    "angular2-template-loader": "~0.6",
    "awesome-typescript-loader": "~5.2",
    "babel-core": "~6.26",
    "babel-loader": "~7.1",
    "babel-preset-env": "~1.7",
    "clean-webpack-plugin": "~0.1",
    "cross-env": "~5.2",
    "css-loader": "~1.0",
    "cssnano": "~4.1",
    "del-cli": "~1.1",
    "html-loader": "~0.5",
    "html-webpack-plugin": "~3.2",
    "lite-server": "~2.4",
    "node-sass": "~4.12",
    "optimize-css-assets-webpack-plugin": "~5.0",
    "sass-loader": "~7.1",
    "style-loader": "~0.23",
    "to-string-loader": "~1.1",
    "typescript": "~3.1",
    "uglifyjs-webpack-plugin": "~2.0",
    "webpack": "~4.29",
    "webpack-cli": "~3.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "~4.2",
    "xml2js": "^0.4.19"
  }
}
